<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
	<TextView 
		android:id="@+id/tvjudulquiz1"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:text="QUIZ 1"   
	    />
	
	<EditText 
	    android:id="@+id/etquiz1_angka1"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/tvjudulquiz1"
	    android:hint="Masukkan angka A"
	    />
	
	<EditText 
	    android:id="@+id/etquiz1_angka2"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/etquiz1_angka1"
	    android:hint="Masukkan angka B"
	    />
	
	<Button 
	    android:id="@+id/btnquiz1_bandingkan"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/etquiz1_angka2"
	    android:text="BANDINGKAN"
	    />
	
</RelativeLayout>
